{
	"root": true,
	"extends": ["neon/node", "neon/typescript", "neon/prettier", "neon/module", "neon/common"],
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"env": {
		"jest": true
	},
	"rules": {
		"@typescript-eslint/ban-types": "off",
		"@typescript-eslint/no-extraneous-class": "off",
		"curly": ["error", "all"],
		"no-eq-null": "off",
		"no-unused-vars": "off",
		"import/extensions": "off"
	}
}
